doctype html

html
  
  include template/head.pug
  
  body.ems-login.page-account
    //Üye girişi yapılmışsa body'e ems-login classı atılması gerekiyor.
    
    include template/header.pug

    .uk-container.uk-container-center
        .page-account-wrapper
            include template/account-menu.pug

            .account-content
                .page-title Üyelik Bilgilerim
                
                .account-form-wrapper
                    form.uk-form
                        fieldset
                            .uk-form-row.uk-flex.uk-flex-middle
                                .uk-width-1-3 Şirket Ünvanı:
                                input.uk-width-2-3(type="text" name="companyTitle" id="companyTitle" placeholder="Şirket Ünvanı")
                            .uk-form-row.uk-flex.uk-flex-middle
                                .uk-width-1-3 Ad Soyad:
                                input.uk-width-2-3(type="text" name="name" id="name" placeholder="Ad Soyad")
                            .uk-form-row.uk-flex.uk-flex-middle
                                .uk-width-1-3 Telefon:
                                input.uk-width-2-3(type="text" name="phone" id="phone" placeholder="Telefon")
                            .uk-form-row.uk-flex.uk-flex-middle
                                .uk-width-1-3 E-Mail:
                                input.uk-width-2-3(type="text" name="email" id="email" placeholder="E-Mail")
                            .uk-form-row.uk-flex.uk-flex-middle
                                .uk-width-1-3 Şifre:
                                input.uk-width-2-3(type="text" name="pass" id="pass" placeholder="Şifre")
                            .uk-form-row.uk-flex
                                .uk-width-1-3 Adresi:
                                textarea.uk-width-2-3(name="address" id="address" placeholder="Adres" row=10)
                            .uk-form-row.uk-flex
                                .uk-width-1-3
                                button.uk-button.uk-button-primary.uk-width-2-3(type="submit") BİLGİLERİMİ KAYDET
                            
                            .uk-form-row.uk-flex.uk-flex-middle
                                .uk-width-1-3 İl Seçimi
                                .uk-width-2-3
                                    .select-input.dropdown
                                            span İl Seçiniz
                                            ul
                                                li: span.name İstanbul
                                                li: span.name Ankara
                                                li: span.name Antalya
                                                li: span.name İzmir
                                                li: span.name Çanakkale
                                                li: span.name Edirne
                                                li: span.name Gaziantep
                            .uk-form-row.uk-flex.uk-flex-middle
                                .uk-width-1-3 İlçe Seçimi
                                .uk-width-2-3
                                    .select-input.dropdown
                                            span İlçe Seçiniz
                                            ul
                                                li: span.name İstanbul
                                                li: span.name Ankara
                                                li: span.name Antalya
                                                li: span.name İzmir
                                                li: span.name Çanakkale
                                                li: span.name Edirne
                                                li: span.name Gaziantep


    include template/footer.pug

    include template/script.pug
            